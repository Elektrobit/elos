{
    "root": {
        "elos": {
            "UseEnv": true,
            "LogLevel": "DEBUG",
            "LogFilter": "",
            "ClientInputs": {
                "Plugins": {
                    "LocalTcp": {
                        "File": "client_tcp.so",
                        "Run": "always",
                        "Config": {
                            "ConnectionLimit": 200,
                            "Port": 54323,
                            "Interface": "127.0.0.1",
                            "EventBlacklist": ".event.messageCode 2000 EQ",
                            "authorizedProcesses": [
                                ".process.uid 0 EQ .process.gid 0 EQ .process.exec '/bin/elosc' STRCMP AND",
                                ".process.gid 200 EQ .process.exec '/bin/elosc' STRCMP AND",
                                ".process.pid 1 EQ"
                            ]
                        }
                    }
                }
            },
            "EventLogging": {
                "Plugins": {
                    "JsonBackend": {
                        "File": "backend_json.so",
                        "Run": "always",
                        "Filter": [
                            ".event.messageCode 5004 EQ"
                        ],
                        "Config": {
                            "StoragePath": "/tmp/elosd_%count%.log"
                        }
                    },
                    "Coredump": {
                        "File": "backend_json.so",
                        "Run": "always",
                        "Filter": [
                            ".event.messageCode 5005 EQ"
                        ],
                        "Config": {
                            "StoragePath": "/tmp/coredumps_%count%.log"
                        }
                    }
                }
            },
            "Scanner": {
                "Plugins": {
                    "ScannerDummy": {
                        "File": "scanner_dummy.so",
                        "Run": "always"
                    },
                    "SyslogScanner": {
                        "File": "scanner_syslog.so",
                        "Run": "always",
                        "Config": {
                            "SyslogPath": "/dev/log",
                            "MappingRules": {
                                "MessageCodes": {
                                    "4000": ".event.source.appName 'ssh' STRCMP",
                                    "2000": ".event.source.appName 'crinit' STRCMP",
                                    "1000": ".event.source.appName 'login' STRCMP"
                                }
                            }
                        }
                    }
                },
                "Shmem": {
                    "ShmemFile": "scanner_shmem",
                    "ShmemCreate": true,
                    "ShmemLogEntries": 16,
                    "ShmemOffset": 0,
                    "SemFile": "scanner_shmem_sem",
                    "SemCreate": true
                }
            }
        }
    }
}
